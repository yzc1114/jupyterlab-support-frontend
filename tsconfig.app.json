{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*", "src/*", "src/api/*", "src/util/*", "src/typeDefs/*"],
    },
    "types": ["element-plus/global"]
  }
}
